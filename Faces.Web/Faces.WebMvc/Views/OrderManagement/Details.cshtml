@model Faces.WebMvc.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Order Details";
}

<h3> Order Details </h3>
Order Id: @Model.Id
User Email: @Model.UserEmail
Picture:
<img src="@Model.ImageString" height="100" width="100">
Order Status: @Model.StatusString
<table class="table">
    <thead>
        <tr>
            <th>OrderDetailId</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderDetail in Model.OrderDetails)
        {
            <tr>
                <td>@orderDetail.Id</td>
                <td><img src="@orderDetail.ImageString" width="40" height="40" /></td>
            </tr>
        }
    </tbody>
</table>